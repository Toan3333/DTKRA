mixin subscribeForm()
	.subscribe
		.subscribefrm
			input.subscribeemail(type="text", placeholder="Nhập email của bạn...")
			button.subscribebutton Gửi
mixin PugImg(url="./img/1.jpg")
	img(data-src=url, alt="", class="lozad " + attributes.class)
mixin btnViewAll(text="Xem thêm")
	a(href="" x-link class='btn-primary-2 btn ' + attributes.class)
		span=text
		img(src=imgButton, alt="", class="w-5 h-5 svg")
mixin HeaderLanguageVertical()
	ul 
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
		ul 
			li 
				a(href="") 
					span EN
mixin HeaderLanguageHorizontal()
	ul 
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
mixin BtnPrimary(text="")
	a(href="", class='btn-primary btn ' + attributes.class)
		span=text
mixin btnPrimary()
	.btn-btn-primary(class="inline-flex items-center group")
		button(class="btn-primary py-3 px-5 border border-Neutral-900 rem:rounded-l-[50px] group-hover:border-Primary-Primary_01 rem:h-[50px] group-hover:bg-Primary-Primary_01 group-hover:border-r group-hover:border-r-Neutral-White transition-all ease-linear")
			a(href="#" class="text-lg font-semibold text-Neutral-900 group-hover:text-Neutral-White") Xem thêm 
		a(href="#" class="btn-lined text-lg font-normal flex items-center gap-2 rem:rounded-r-[50px] group-hover:bg-Primary-Primary_01")
			span(class="icon to-right") 
				i.fa-regular.fa-arrow-right
				i.fa-regular.fa-arrow-right